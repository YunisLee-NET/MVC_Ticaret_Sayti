@using MVC_Ticaret.Models.Sinifler
@model List<Musteriler>
@{
    ViewBag.Title = "MusterliPanel";
    Layout = "~/Views/Shared/_MusPanelView.cshtml";
}

<style>
    li {
        list-style-type: none;
        font-size: 16px;
    }
</style>

<div>
    <h4 class="mt-4">İstifadəçi haqqında məlumatlar</h4>
    <div style="display:flex;padding:10px">
        <div style="display:flex;justify-content:space-around">
            <div style="margin-right:2cm">
                @foreach (var x in Model)
                {
                    <ul>
                        <li><img style="width:6cm; height:6cm; border-radius:100%" src="@x.MusteriFoto" /></li>

                    </ul>
                }
                </div>
            <div style="padding:10px;width:10cm">
                <h4>Mail :  @HttpContext.Current.User.Identity.Name</h4>
                <hr />
                <ul>
                    @foreach (var x in Model)
                    {                        
                        <li><span><b>Adınız: </b></span>@x.MusteriAd</li>                        
                        <li><span><b>Soyadınız: </b></span>@x.MusteriSoyad</li>                        
                        <li><span><b>Şəhəriniz: </b></span>@x.MusteriSeher</li>
                    }
                    </ul>
                <br />
                <button class="btn btn-warning">Yenilə</button>
            </div>

        </div>
    </div>
</div>

